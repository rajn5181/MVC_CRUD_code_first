@model List<MvcCrud.Models.Domain.Employee>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FName</td>
                <td>@item.lName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.DOB</td>
                <td>
                    <div style="display: inline-block;">
                        <a href="@Url.Action("Edit", "Employee", new { id = item.Id })">Edit</a>|
                        
                        <div style="display:inline-block;">
                            <form method="post" asp-action="Delete" asp-route-id="@item.Id" formmethod="post">
                                <button type="submit" class="btn btn-link">Delete</button>
                            </form>
                        </div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
